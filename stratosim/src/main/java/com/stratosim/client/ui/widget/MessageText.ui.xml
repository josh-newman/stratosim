<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		@external stratosim-MessageText;
		.stratosim-MessageText {
			display: block;
			text-align: center;
			margin: 0 0 0 0;
			padding: 0 0 0 0;
		}
		
		@external stratosim-MessageText-info;
		.stratosim-MessageText-info {
			
		}
		
		@external stratosim-MessageText-working;
		.stratosim-MessageText-working {
			background: rgba(255, 255, 200, 0.95);
			border: 1px solid orange;
		}
		
		@external stratosim-MessageText-done;
		.stratosim-MessageText-done {
			background: rgba(200, 255, 200, 0.95);
			border: 1px solid green;
		}
		
		@external stratosim-MessageText-error;
		.stratosim-MessageText-error {
			background: rgba(255, 200, 200, 0.95);
			border: 1px solid red;
		}
	</ui:style>

	<g:Label ui:field="label" stylePrimaryName="stratosim-MessageText" />

</ui:UiBinder> 