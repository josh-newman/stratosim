<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:image field='rlButtonImage' src="rotateLeft.png" />
	<ui:image field='rrButtonImage' src="rotateRight.png" />
	<ui:image field='fhButtonImage' src="flipHorizontal.png" />
	<ui:image field='fvButtonImage' src="flipVertical.png" />

	<g:Grid addStyleNames="stratosim-Editor">
		<g:row>
			<g:customCell>
				<g:PushButton ui:field="rotateLeft" title="Rotate Left">
					<g:upFace image='{rlButtonImage}' />
				</g:PushButton>
			</g:customCell>
			<g:customCell>
				<g:PushButton ui:field="rotateRight" title="Rotate Right (Shortcut: R)">
					<g:upFace image='{rrButtonImage}' />
				</g:PushButton>
			</g:customCell>
		</g:row>
		<g:row>
			<g:customCell>
				<g:PushButton ui:field="flipHorizontal" title="Flip Horizontal">
					<g:upFace image='{fhButtonImage}' />
				</g:PushButton>
			</g:customCell>
			<g:customCell>
				<g:PushButton ui:field="flipVertical"  title="Flip Vertical">
					<g:upFace image='{fvButtonImage}' />
				</g:PushButton>
			</g:customCell>
		</g:row>
	</g:Grid>

</ui:UiBinder> 