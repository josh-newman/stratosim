<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:stratosim-widget="urn:import:com.stratosim.client.ui.widget">

	<ui:style>

		@external stratosim-FileChooser-Caption;
		.stratosim-FileChooser-Caption {
			width: 85%;
			margin-left: auto;
			margin-right: auto;
		}
		
		@external stratosim-FileChooser-Button;
		.stratosim-FileChooser-Button {
			width: 220px;
			height: 150px;
			background: white;
			border: 1px solid black;
			margin-top: 1px;
			margin-bottom: 1px;
			margin-left: auto;
			margin-right: auto;
		}
		
		.stratosim-FileChooser-Button:hover {
			margin-top: 0px;
			margin-bottom: 0px;
			border: 2px solid #66ccff;
		}

	</ui:style>

	<stratosim-widget:GridList stylePrimaryName="stratosim-FileChooser"
		ui:field="grid" columns="3" />

</ui:UiBinder> 